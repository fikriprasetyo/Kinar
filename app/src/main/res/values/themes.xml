<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Kinar" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#00D2FF</item>
        <item name="colorPrimaryVariant">#3A7BD5</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
        <item name="background">@color/white</item>
    </style>

    <!-- Toolbar -->
    <style name="Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/three</item>
        <item name="fontFamily">@font/poppins_bold</item>

    </style>

    <!-- Navbar -->
    <style name="Navbar.Title" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <!-- Menu -->
    <style name="MenuStyle" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="android:fontFamily">@font/poppins</item>
    </style>
</resources>